<div class="buyer-dashboard search">
  <h1>Your contracts and orders</h1>
  <p class="department-name">Department of Finance, Services and Innovation</p>

  <div class="search-results">
    <ul class="filters">
      <h2>Apply filters</h2>

      <li class="filter">
        <h3><label for="search">Keyword search</label></h3>
        <div class="search-field">
          <input type="text" id="search">
          <button class="search-button">
            <span class="label">&rarr;</span>
          </button>
        </div>
      </li>

      <li class="filter">
        <h3>Contracting framework</h3>
        <ul class="options">
          <% ['Core&', 'ProcureIT 3.1','Goods and services','Consultancy services','Legal services order form'].each_with_index do |option, i| %>
          <li>
            <input type="checkbox" id="contract_<%= i %>">
            <label for="contract_<%= i %>"><%= option %></label>
          </li>
          <% end %>
        </ul>
      </li>

      <li class="filter">
        <h3>Contract value</h3>
        <ul class="options">
          <% ['Under $5,000', '$5,000 to $9,999','$10,000 to $49,999','$50,000 to $99,999', '$100,000 to $499,999', '$500,000 to $999,999', '$1,000,000 to $5,000,000', 'Over $5,000,000'].each_with_index do |option, i| %>
          <li>
            <input type="checkbox" id="value_<%= i %>">
            <label for="value_<%= i %>"><%= option %></label>
          </li>
          <% end %>
        </ul>
      </li>

      <button class="button">Update results</button>
    </ul>

    <ul class="results">
      <h2 class="result-count">
        <em class="big-number">371</em>
        <span class="big-number-label">contracts and orders found</span>
      </h2>

      <% 20.times do %>
      <li class="result">
        <h3>
          <a href="">
            <%= ['Taragon', 'Cellar Systems', 'Dubbo Digital', 'Frontier', 'Microform', 'Orn, Kulas and Schowalter',
              'Powlowski LLC', 'DataFirst', 'Daniel-Goldner', 'Luettgen, Lubowitz and Weissnat', 'EN Technology',
              'Froogal', 'HNFC Partners'].shuffle.first %>
          </a>
        </h3>
        <ul class="metadata">
          <li><%= ['Order','Contract'].shuffle.first %></li>
          <li><%= ['6 months', '8 months', '12 months', '18 months', '24 months'].shuffle.first %></li>
          <li>$75,303</li>
          <li><%= ['Core& As-a-service', 'Core& Cloud', 'Core& Professional Services', 'ProcureIT 3.2', 'Legal services', 'Consultancy services'].shuffle.first %></li>
        </ul>
      </li>
      <% end %>
    </ul>
  </div>
</div>
